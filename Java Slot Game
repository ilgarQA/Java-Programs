import java.util.Scanner;
import java.util.Random;

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        // Declare variables
        int balance = 100;
        int bet;
        int payout;
        String[] row;
        String playAgain;

        // Display welcome message
        System.out.println("*************************");
        System.out.println("Welcome to Java Slots");
        System.out.println("Symbols: ğŸ’ ğŸ‰ ğŸ‹ ğŸ”” ğŸŒŸ ");
        System.out.println("*************************");

        // Play
        while(balance > 0){
            System.out.printf("Current balance: %d \n", balance);
            System.out.print("Place your bet amount: ");
            bet = scanner.nextInt();
            scanner.nextLine();

            if(bet > balance){
                System.out.println("INSUFFICIENT FUNDS!!! \n");
                continue;
            }
            else if(bet <= 0){
                System.out.println("Bets must be greater than 0 \n");
            }
            else{
                balance -= bet;
                System.out.printf("Current balance: $%d \n", balance);
            }

            System.out.println("Spinning...");
            row = spinRow();
            printRow(row);
            payout = getPayout(row, bet);

            if(payout > 0){
                System.out.printf("You won %d ğŸ¤© \n", payout);
                balance += payout;
            }
            else{
                System.out.println("Sorry you lost the game ğŸ˜­ \n");
            }

            System.out.print("Do you want to play again? (YES/NO): ");
            playAgain = scanner.nextLine().toUpperCase();

            if(!playAgain.equals("YES")){
                break;
            }
        }
        System.out.println("The game is over! Your final balance: " +  balance);

        scanner.close();
    }
    static String[] spinRow(){
        String[] symbols = {"ğŸ’", "ğŸ‰", "ğŸ‹", "ğŸ””", "ğŸŒŸ"};
        String[] row = new String[3];
        Random random = new Random();

        for(int i = 0; i < 3; i++){
            row[i] = symbols[random.nextInt(5)];
        }

        // System.out.printf(row[0], row[1], row[2]);
        System.out.println();

        return row;
    }
    static void printRow(String[] row){
        System.out.println(" " + String.join(" | ", row));
    }
    static int getPayout(String[] row, int bet){
        if(row[0].equals(row[1]) && row[1].equals(row[2])){
            return switch(row[0]){
                case "ğŸ’" -> bet * 3;
                case "ğŸ‰" -> bet * 4;
                case "ğŸ‹" -> bet * 5;
                case "ğŸ””" -> bet * 10;
                case "ğŸŒŸ" -> bet * 20;
                default -> 0;
            };
        }
        else if(row[0].equals(row[1])){
            return switch(row[0]){
                case "ğŸ’" -> bet * 2;
                case "ğŸ‰" -> bet * 3;
                case "ğŸ‹" -> bet * 4;
                case "ğŸ””" -> bet * 5;
                case "ğŸŒŸ" -> bet * 10;
                default -> 0;
            };
        }
        else if(row[1].equals(row[2])){
            return switch(row[1]){
                case "ğŸ’" -> bet * 2;
                case "ğŸ‰" -> bet * 3;
                case "ğŸ‹" -> bet * 4;
                case "ğŸ””" -> bet * 5;
                case "ğŸŒŸ" -> bet * 10;
                default -> 0;
            };
        }
        else if(row[0].equals(row[2])){
            return switch(row[1]){
                case "ğŸ’" -> bet * 2;
                case "ğŸ‰" -> bet * 3;
                case "ğŸ‹" -> bet * 4;
                case "ğŸ””" -> bet * 5;
                case "ğŸŒŸ" -> bet * 10;
                default -> 0;
            };
        }
        return 0;
    }
}
